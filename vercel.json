{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.{html,js,json}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/chat.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/catalog.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/update-catalog.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/lead.js": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}
